<% if user_signed_in?%>

  <% if @current_user.id == @event.owner%>

    <%= link_to 'Edit', edit_event_path(@event), class: "btn btn-warning" %>
    <% else %>
  <% if @event.already_subscribed(@current_user) %>
      <%= link_to "desinscrever", "/events/#{@event.id}/unsubscribe/#{current_user.id}" ,method: :put, class:"btn btn-danger"%>
  <% else %>
      <%=link_to 'Se inscrever',"/subscribe/#{@event.id}", method: :put, class: "btn btn-success" %>
    <% end %>
    <% end %>
    <% else %>
      <%= link_to "Entrar", new_user_session_path, class: "btn btn-primary" %>
    <% end %>
