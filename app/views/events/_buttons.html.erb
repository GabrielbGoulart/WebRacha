<% if user_signed_in?%>

  <% if @current_user.id == @event.owner%>

    <%= link_to 'Edit', edit_event_path(@event), class: "btn btn-warning" %>
  <% elsif @event.already_subscribed(@current_user) %>
      <%= link_to "desinscrever", root_path , "btn btn-dange"%>
  <% end %>
<% else %>
<td><%=link_to 'Se inscrever',"/subscribe/#{@event.id}", method: :put, class: "btn btn-success" %>
<% end %>
