<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @event.name %>
</p>

<p>
  <strong>Date:</strong>
  <%= @event.date %>
</p>

<p>
  <strong>Hour:</strong>
  <%= @event.hour %>
</p>

<p>
  <strong>User:</strong>
  <%= @event.owner %>
</p>

<%=@event.userlimit%>

  <%@event.users.each do |d|%>
    <%=@users.find(d.id).name%>
<%end%>

<p>
  <strong>Cost:</strong>
    <%valor = @event.cost / @event.userlimit %>
    <%= valor.round(2) %>
</p>


<%= link_to 'Edit', edit_event_path(@event) %> |
<%= link_to 'Back', events_path %>
