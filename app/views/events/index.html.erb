<p id="notice"><%= notice %></p>

<h1>Listing Events</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Date</th>
      <th>Hour</th>
      <th>Owner</th>
      <th colspan="3"></th>
    </tr>
  </thead>

<p>

</p>


  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.name %></td>
        <td><%= event.date %></td>
        <td><%= event.hour %></td>
        <td><%= event.owner %></td>

        <td><%= link_to 'Show', event %></td>
        <% if @current_user.id == event.owner %>
        <td><%=link_to 'Edit', edit_event_path(event)%></td>
        <td><%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <%else%>
          <% if !event.already_subscribed(@current_user)%>
          <td><%=link_to 'Cadastrar',"/subscribe/#{event.id}", method: :put %></td>
            <%end%>
          <%end%>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Event', new_event_path %>
