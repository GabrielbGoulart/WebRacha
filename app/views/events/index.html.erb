<p id="notice"><%= notice %></p>

<h1 align= "center">Listing Events</h1>



<div class="container">

  <div class="row bs-download">
      <% @events.each do |event| %>
        <div class="col-sm-6 col-md-4">
          <div class="thumbnail">
            <div class="caption">
              <h3 align= "center"> <%=event.name%> </h3>
              <div class="well well-small">
              <p> Data: <%=event.date.to_formatted_s(:short) %></p>
              </div>
              <p><%=link_to('Ver Racha', event, class: "btn btn-primary")%></p>
            </div>
          </div>
        </div>
      <% end %>
   </div>

 </div>

<br>

