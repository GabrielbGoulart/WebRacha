<section id="services">
     <div class="container">
         <div class="row">
             <div class="col-md-12">
               <p id="notice"><%= notice %></p>
                 <div class="center gap">
                     <h2>What we do</h2>
                     <p>Pellentesque habitant morbi tristique senectus et netus et malesuada fames ac turpis egestas.</p>
                 </div>
             </div>
         </div>

         <div class="row">
          <% @events.each do |event|%>
          <% i=0%>
             <div class="col-md-4 col-sm-6">
                 <div class="media">
                   <div class="pull-left">
                         <span class="glyphicon glyphicon-ok icon-md"></span>
                   </div>
                     <div class="media-body">
                         <!-- true -->
                         <h3 class="media-heading"><%=link_to("#{event.name.capitalize}",event)%>
                           <% if event.owner == current_user %>
                            <%= link_to event, method: :delete do %>
                                <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
                            <% end %>

                            <% end %>
                         </h3>
                         <p>Data: <%=event.date.to_formatted_s(:short) %>
                            Ã s <%=event.hour.to_formatted_s(:time)%>
                         </p>
                     </div>
                 </div>
             </div><!--/.col-md-4-->
             <% i+=1%>
               <% if i==3%>
                </div><!--/.row-->
                 <div class="gap"></div>
               <%i=0%>
             <% end %>
         <%end%>
     </div>
 </section>
 <% if user_signed_in?%>
<%= link_to "Novo evento", new_event_path, class: "btn btn-primary" %>
<%end %>
 <hr>
