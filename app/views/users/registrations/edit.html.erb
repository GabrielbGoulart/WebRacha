<section id="title" class="emerald">
    <div class="container">
        <div class="row">
            <div class="col-sm-6">
                <h1>Edit</h1>
            </div>
        </div>
    </div>
</section><!--/#title-->

<section id="registration" class="container">
            <%= form_for(resource, as: resource_name, url: registration_path(resource_name), :html =>{:class => "center"}) do |f| %>
                <fieldset class="registration-form">
                <%= devise_error_messages! %>
            <div class="form-group">
                <%= f.text_field :name, autofocus: true, placeholder:"Username", class:"form-control" %>
            </div>
            <div class="form-group">
                <%=f.select :position, options_for_select([['Goleiro',"Goleiro"],['Linha',"Linha"]], 2),{},{ class:"form-control" }%>
            </div>
            <div class="form-group">
                <%= f.email_field :email, autofocus: true, placeholder:"E-mail", class:"form-control"  %>
            </div>
            <div class="form-group">
              <%= f.password_field :password, autocomplete: "off", placeholder:"New Password", class:"form-control" %> <i>(leave blank if you don't want to change it)</i>
              <% if @minimum_password_length %>
              <em>(<%= @minimum_password_length %> characters minimum)</em>
              <% end %><br />
            </div>
            <div class="form-group">
                <%= f.password_field :password_confirmation, autocomplete: "off", placeholder:"Password (Confirm)", class:"form-control" %>
            </div>
            <div class="form-group">

                <%= f.password_field :current_password, autocomplete: "off", placeholder:"Current Password", class:"form-control" %> <i>(we need your current password to confirm your changes)</i><br />
            </div>
            <div class="form-group">
                <%= f.submit "Update", class:"btn btn-success btn-md btn-block" %>
            </div>
            </fieldset>
            <%end%>
</section><!--/#registration-->
<section id="title" class="emerald">
    <div class="container">
        <div class="row">
            <div class="col-sm-6">
                <h1>Unhappy?</h1>
            </div>
        </div>
        <div class="form-group">
            <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete , class:"btn btn-success btn-md btn-block" %><br>
            <%= button_to "Back", :back, class:"btn btn-success btn-md btn-block" %>
        </div>
    </div>
</section><!--/#title-->
